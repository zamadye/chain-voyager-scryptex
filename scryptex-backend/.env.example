# SCRYPTEX Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,https://app.scryptex.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/scryptex_dev
DB_MAX_CONNECTIONS=20
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-64-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-64-chars
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=scryptex-api

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=5
LOG_MAX_SIZE=20m

# Security Configuration (Development - Change for Production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ENABLE_SWAGGER=true
ENABLE_CORS=true

# Development Tools (Set to false in production)
ENABLE_PGADMIN=true
ENABLE_REDIS_COMMANDER=true

# Monitoring Configuration (Optional)
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# External Service Configuration (Future Use)
# COINGECKO_API_KEY=your-coingecko-api-key
# DEXSCREENER_API_KEY=your-dexscreener-api-key
# ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
# POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your-project-id

# Email Configuration (Future Use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=noreply@scryptex.com

# AWS Configuration (Future Use)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=scryptex-uploads

# Sentry Configuration (Future Use)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags (Future Use)
# ENABLE_USER_REGISTRATION=true
# ENABLE_WALLET_LINKING=true
# ENABLE_MULTI_CHAIN=false
# ENABLE_TRADING=false
# ENABLE_SOCIAL_FEATURES=false

# Development Database (Alternative to main DATABASE_URL)
# DEV_DATABASE_URL=postgresql://scryptex:scryptex_password@localhost:5432/scryptex_dev

# Test Database
# TEST_DATABASE_URL=postgresql://scryptex:scryptex_password@localhost:5432/scryptex_test

# Production specific (Uncomment and configure for production)
# DATABASE_SSL=true
# ENABLE_SWAGGER=false
# LOG_LEVEL=warn
# RATE_LIMIT_MAX_REQUESTS=60
# RATE_LIMIT_WINDOW_MS=60000

# Docker Configuration
# POSTGRES_USER=scryptex
# POSTGRES_PASSWORD=scryptex_password
# POSTGRES_DB=scryptex_dev
# REDIS_PASSWORD=redis_password

# SSL Configuration (Production)
# SSL_CERT_PATH=/etc/ssl/certs/scryptex.crt
# SSL_KEY_PATH=/etc/ssl/private/scryptex.key

# Load Balancer Configuration (Production)
# TRUST_PROXY=true
# SESSION_SECURE=true

# Backup Configuration (Production)
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=scryptex-backups

# Performance Configuration
# UV_THREADPOOL_SIZE=4
# NODE_OPTIONS=--max-old-space-size=4096

# Debug Configuration (Development)
# DEBUG=scryptex:*
# DEBUG_COLORS=true
# DEBUG_DEPTH=3

# API Documentation
# SWAGGER_TITLE=SCRYPTEX API
# SWAGGER_DESCRIPTION=Multi-Chain DEX and Token Creation Platform API
# SWAGGER_VERSION=1.0.0
# SWAGGER_CONTACT_EMAIL=support@scryptex.com

# Build Information (Set by CI/CD)
# BUILD_DATE=2024-01-01T00:00:00Z
